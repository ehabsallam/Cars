@model IEnumerable<Cars.Models.Car>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Cars</h2>
<div class="scr">
    <p>
        @Html.ActionLink("اضافة سيارة جديدة", "Create")
    </p>

    <table class="table table-stripped table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarImage)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarTitle)
                </td>
                <td>
                    @Html.Raw(HttpUtility.HtmlDecode(@Html.DisplayFor(modelItem => item.CarContent).ToString()))


                    
                </td>
                <td>
                    <img src="~/Uploads/@Html.DisplayFor(model=>item.CarImage)"
                         class="thumbnail" style="width:48px; height:48px;" />
                </td>
                <td>
                    @Html.ActionLink("تعديل", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("تفاصيل", "Details", new { id = item.Id }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>